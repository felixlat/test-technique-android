<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/CardEquipement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:id="@+id/rl_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/rl_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintRight_toLeftOf="@id/rl_equipementInfo">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/Photo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hello World! 1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_equipementInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintLeft_toRightOf="@id/rl_photo">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:text="Hello World! 1"
                app:layout_constraintBottom_toTopOf="@id/Domain" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/Domain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="Hello World 2!"
                app:layout_constraintBottom_toTopOf="@id/nbFaults" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/nbFaults"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"
                android:text="Hello World! 3"
                app:layout_constraintTop_toBottomOf="@id/Domain" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>